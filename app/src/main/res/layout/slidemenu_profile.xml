<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#405eff"
                android:weightSum="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="141dp"
                    android:layout_height="146dp"
                    android:id="@+id/slidemenu_profile_image"
                    android:src="@drawable/ic_account_circle_white_64dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.19" />

                <FrameLayout
                    android:layout_width="203dp"
                    android:layout_height="match_parent"
                    android:id="@+id/framelayout_change_avatar"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Change your avatar"

                        android:layout_gravity="center" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="53dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Text"
                    android:id="@+id/slidemenu_profile_name"
                    android:gravity="center_vertical|left" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/framelayout_change_name">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Chang your name"
                        android:id="@+id/textView5"
                        android:layout_gravity="center" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="53dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Text"
                    android:id="@+id/slidemenu_profile_password"
                    android:gravity="center_vertical|left" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/framelayout_change_password">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Change your password"

                        android:layout_gravity="center" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="53dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Text"
                    android:id="@+id/slidemenu_profile_email"
                    android:gravity="center_vertical|left" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/framelayout_change_email">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Change your email"

                        android:layout_gravity="center" />
                </FrameLayout>

            </LinearLayout>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/test_button" />

        </LinearLayout>
    </FrameLayout>
</ScrollView>
